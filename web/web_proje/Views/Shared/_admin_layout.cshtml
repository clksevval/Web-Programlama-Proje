@*
    Sayfalarda kullanmak için @{Layout="admin_layout";}
*@


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web_proje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/web_proje.styles.css" asp-append-version="true" />
    <!-- Syncfusion ASP.NET Core Takvim -->
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/27.2.2/fluent.css" />
    <script src="https://cdn.syncfusion.com/ej2/27.2.2/dist/ej2.min.js"></script>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  border-bottom box-shadow mb-3 " style="background-color: rgba(100,0,100)">
            @*Navbar Bootstrap*@
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"> <a class="nav-link" href="@Url.Action("Anasayfa_Admin","Admin")" style="color: #FFFFFF;">Anasayfa</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Takvim_Admin","Admin")" style="color: #FFFFFF;">Nöbet Takvimi</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Randevu_Admin","Admin")" style="color: #FFFFFF;">Randevu Sayfası</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Acil_Durum_Admin", "Admin")" style="color: #FFFFFF;">Acil Durum Haberleri</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: #FFFFFF;">
                                Hakkımızda
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <li><a class="dropdown-item" href="@Url.Action("Asistan_Bilgi_Admin","Admin")" style="color: #000000;">Asistan Kayıtları</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Hoca_Bilgi_Admin","Admin")" style="color: #000000;">Öğretim Üyesi Kayıtları</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Bolum_Bilgi_Admin","Admin")" style="color: #000000;">Bölüm Bilgileri</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MKA Eğitim Araştırma - Tüm Hakları Saklıdır.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Syncfusion ASP.NET Core Takvim -->
    <ejs-scripts></ejs-scripts>
</body>
</html>
