<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web_proje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/web_proje.styles.css" asp-append-version="true" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- Bootstrap JS ve Bağımlılıklar -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


    <!--FullCalendar Takvim için Javascript Dosyaları Tanımladım-->
    <script src="/lib/dist/index.global.js"></script>
    <script src="/lib/dist/index.global.min.js"></script>






</head>
<body>
    @RenderSection("hastanesayfasi", false)@*Partial View Ekleyeceğim Ama Render Body kısmına değil*@
<header >
    
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color: rgba(210,0,0)">
            @*Navbar Bootstrap*@
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Anasayfa","Kullanici")" style="color: #FFFFFF;">Anasayfa</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Takvim","Kullanici")" style="color: #FFFFFF;">Nöbet Takvimi</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Randevu","Kullanici")" style="color: #FFFFFF;">Randevu Sayfası</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Acil_Durum", "Kullanici")" style="color: #FFFFFF;">Acil Durum Haberleri</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: #FFFFFF;text-align:right">
                                Hastanemiz
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <li><a class="dropdown-item" href="@Url.Action("Asistan_Bilgi","Kullanici")" style="color: #000000;">Asistanlar</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Hoca_Bilgi","Kullanici")" style="color: #000000;">Öğretim Üyelerimiz</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Bolum_Bilgi","Kullanici")" style="color: #000000;">Bölümlerimiz</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
       
</header>


    <div class="container mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class=" border-top footer  text-muted">
        <div class="container ">
            &copy; 2024 - MKA Eğitim Araştırma - Tüm Hakları Saklıdır.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
    <!-- Syncfusion ASP.NET Core Takvim -->
    <ejs-scripts></ejs-scripts>

</body>
</html>
