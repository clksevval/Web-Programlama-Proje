@{
    Layout = "_admin_layout";
}

<h1 style="text-align:center;margin:50px">Randevu Saati Oluşturma</h1>

<!-- Yeni Randevu Kayıt Formu -->
<form method="post">
    <div class="form-group">
        <label for="HocaId">Öğretim Üyesinin Id Numarası</label>
        <input type="text" placeholder="Zorunlu Alan" name="HocaId" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Randevu_Tarihi">Randevu Tarihi</label>
        <input type="text" name="Randevu_Tarihi" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary m-3">Ekle</button>
</form>

<hr />


<!-- Kaydı Olan Randevuların Listesi -->

<h2 style="color:palevioletred; text-align:center">Randevular Listesi</h2>

<table class="table table-striped table-hover">

    @foreach (var item in ViewBag.RandevuListe as List<Randevu>)
    {
        <tr>
            <td>@item.RandevuId</td>
            <td>@item.HocaId</td>
            <td>@item.Randevu_Tarihi</td>
            <td>

                <form asp-action="Delete_Randevu" method="post">
                    <input type="hidden" name="id" value="@item.RandevuId" />
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </td>
        </tr>
    }

</table>

