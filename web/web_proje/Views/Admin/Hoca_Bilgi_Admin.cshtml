@{
    Layout = "_admin_layout";
}

<h1 style="text-align:center;margin:50px">Yeni Öğretim Üyesi Kaydı Oluşturma ve Güncelleme</h1>

<!-- Yeni Kayıt Formu -->
<form method="post">
    <div class="form-group">
        <label for="HocaAd">Hocanın Tam Adı</label>
        <input type="text" placeholder="Zorunlu Alan" name="HocaAd" class="form-control" />
    </div>
    <div class="form-group">
        <label for="HocaSoyad">Hocanın Soyadı</label>
        <input type="text" placeholder="Zorunlu Alan" name="HocaSoyad" class="form-control" />
    </div>
    <div class="form-group">
        <label for="HocaYas">Hocanın Yaşı</label>
        <input type="text" name="HocaYas" class="form-control" />
    </div>
    <div class="form-group">
        <label for="HocaTel">Hocanın Telefon Numarası</label>
        <input type="text" name="HocaTel" class="form-control" />
    </div>
    <div class="form-group">
        <label for="HocaMail">Hocanın E-Mail Adresi</label>
        <input type="text" placeholder="Zorunlu Alan" name="HocaMail" class="form-control" />
    </div>
    <div class="form-group">
        <label for="BolumId">Bölüm Id</label>
        <input type="text" name="BolumId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary m-3">Ekle</button>
</form>

<hr />


<!-- Kaydı Olan Hocaların Listesi -->

<h2 style="color:palevioletred; text-align:center">Öğretim Üyesi Listesi</h2>

<table class="table table-striped table-hover">

    @foreach (var item in ViewBag.HocaListe as List<Hoca>)
    {
        <tr>
            <td>@item.HocaId</td>
            <td>@item.HocaAd</td>
            <td>@item.HocaSoyad</td>
            <td>
                <a class="btn btn-info" asp-action="Update_Hoca" asp-route-id="@item.HocaId">Güncelle</a>
            </td>
            <td>

                <form asp-action="Delete_Hoca" method="post">
                    <input type="hidden" name="id" value="@item.HocaId" />
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </td>

        </tr>
    }

</table>
